-->
   </key>

   <key n="93">
    <name>]</name>
    <desc>Deploy drogue parachute</desc>
    <binding>
     <command>property-assign</command>
     <property>sim/model/MRX13/DrogueChute</property>
     <value>1</value>
    </binding>
   </key>

   <key n="91">
    <name>[</name>
    <desc>Retract drogue parachute</desc>
    <binding>
     <command>property-assign</command>
     <property>sim/model/MRX13/DrogueChute</property>
     <value>0</value>
    </binding>
   </key>

