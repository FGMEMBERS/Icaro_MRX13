   <key n="114">
    <name>r</name>
    <desc>recover</desc>
    <binding>
     <command>nasal</command>
     <script>
      # setprop("orientation/roll-deg", 0); 
      # setprop("orientation/pitch-deg", 0);
      MRX13.wing_failure_repair();
     </script>
    </binding>
   </key>

   <key n="356">
    <name>Left</name>
