     <command>property-adjust</command>
     <property>sim/model/MRX13/animation/side</property>
     <step type="double">-0.05</step>
     <min>-1.</min>
     <max>0.</max>
    </binding>
   </key>

   <key n="358">
    <name>Right</name>
