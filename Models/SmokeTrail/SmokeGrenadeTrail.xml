<?xml version="1.0"?>
<PropertyList>

 <!--particle system-->

 <particlesystem>
  <type>normal</type>
  <!-- <type>trail</type> -->
  <name>SmokeTrail</name>
  <texture>smoke.rgb</texture>
  <emissive type="bool">false</emissive>
  <lighting type="bool">true</lighting>
  <align>billboard</align> <!-- billboard / fixed -->

  <offsets>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
   <pitch-deg>  0.</pitch-deg>
   <roll-deg>   0.</roll-deg>
   <heading-deg>0.</heading-deg>
  </offsets>

  <attach>world</attach> <!-- world / local-->

  <placer>
   <type>point</type> <!-- sector / segments / point -->
  </placer>

  <shooter>
   <theta-min-deg>80</theta-min-deg>
   <theta-max-deg>100</theta-max-deg>
   <phi-min-deg>-20</phi-min-deg>
   <phi-max-deg>0</phi-max-deg>
   <speed-mps>
    <!-- <property>engines/engine[0]/rpm</property> -->
    <value>10</value>
    <factor>0.01</factor>
    <spread>5</spread>
   </speed-mps>
   <rotation-speed>
    <x-min-deg-sec>0</x-min-deg-sec>
    <x-max-deg-sec>0</x-max-deg-sec>
    <y-min-deg-sec>0</y-min-deg-sec>
    <y-max-deg-sec>0</y-max-deg-sec>
    <z-min-deg-sec>-180</z-min-deg-sec>
    <z-max-deg-sec> 180</z-max-deg-sec>
   </rotation-speed>
  </shooter>

  <counter>
   <particles-per-sec>
    <!-- <property>engines/engine[0]/rpm</property> -->
    <value>250</value>
    <factor>1.0</factor>
    <spread>25</spread>
   </particles-per-sec>
  </counter>

  <particle>
   <start>
    <color>
     <red>   <property alias="../../../../../../params/red"/>   </red>
     <green> <property alias="../../../../../../params/green"/> </green>
     <blue>  <property alias="../../../../../../params/blue"/>  </blue>
     <alpha> <value>0.3</value> </alpha>
    </color>
    <size>
     <value>0.15</value>
    </size>
   </start>

   <end>
    <color>
     <red>   <property alias="../../../../../../params/red"/>   </red>
     <green> <property alias="../../../../../../params/green"/> </green>
     <blue>  <property alias="../../../../../../params/blue"/>  </blue>
     <alpha> <value>0.001</value> </alpha>
    </color>
    <size>
     <value>1.0</value>
    </size>
   </end>
   <life-sec>
    <value>10.0</value>
   </life-sec>
   <mass-kg>0.1</mass-kg>
   <radius-m>0.25</radius-m>
  </particle>

  <program>
   <fluid>air</fluid>
   <gravity>false</gravity>
   <wind>true</wind>
  </program>

 </particlesystem>

</PropertyList>
