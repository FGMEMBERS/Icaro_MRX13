 <animation>
  <type>select</type>
  <object-name>Wing_VG0</object-name>
  <condition>
   <and>
    <less-than>
     <property>controls/flight/spoilers</property>
     <value>0.5</value>
    </less-than>
    <not>
     <property>sim/model/MRX13/wing-failure</property>
    </not>
   </and>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Wing_VG1</object-name>
  <condition>
   <and>
    <greater-than-equals>
     <property>controls/flight/spoilers</property>
     <value>0.5</value>
    </greater-than-equals>
    <not>
     <property>sim/model/MRX13/wing-failure</property>
    </not>
   </and>
  </condition>
  <nopreview/>
 </animation>


