<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>

 <nasal>
  <load>
   var livery_update = aircraft.livery_update.new("Aircraft/Icaro_MRX13/Models/Variants");

   ##############################################################################
   # The on-load Nasal is not executed when this file is loaded as the user aircraft.
   ##############################################################################
   var rplayer = cmdarg();
   # Set up property aliases for animations.

   rplayer.getNode("sim/model/MRX13/on-ground", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[0]"));
   rplayer.getNode("sim/model/MRX13/with-wheels_mp", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[1]"));
   rplayer.getNode("sim/model/MRX13/with-woolthread_mp", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[2]"));
   rplayer.getNode("sim/model/MRX13/with-TwoStageRelease_mp", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[3]"));
   rplayer.getNode("sim/model/MRX13/RotateAboutHangpoint", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[4]"));
   rplayer.getNode("sim/model/MRX13/RotateAboutPilot", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[5]"));
   rplayer.getNode("sim/model/MRX13/wing-failure", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[6]"));
   rplayer.getNode("sim/model/SmokeTrail/Keel/Generator", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[7]"));
   rplayer.getNode("sim/model/SmokeTrail/ControlBarLeft/Generator", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[8]"));
   rplayer.getNode("sim/model/SmokeTrail/ControlBarRight/Generator", 1).
     alias(rplayer.getNode("sim/multiplay/generic/int[9]"));

   rplayer.getNode("sim/model/MRX13/animation/running_leg_left", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[0]"));
   rplayer.getNode("sim/model/MRX13/animation/running_leg_right", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[1]"));
   rplayer.getNode("sim/model/MRX13/animation/running_leg", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[2]"));
   rplayer.getNode("sim/model/MRX13/animation/running_leg_sign", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[3]"));
   rplayer.getNode("controls/flight/pilot-attitude-deg", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[4]"));
   rplayer.getNode("sim/model/Parachutes/drogue_chute-pos-norm", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[5]"));
   rplayer.getNode("sim/model/Parachutes/parachute-pos-norm", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[6]"));
   rplayer.getNode("fdm/jsbsim/gear/unit[10]/wheel-speed-fps", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[7]"));
   rplayer.getNode("fdm/jsbsim/gear/unit[11]/wheel-speed-fps", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[8]"));
   rplayer.getNode("sim/model/aero/alpha-deg", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[9]"));
   rplayer.getNode("sim/model/aero/beta-deg", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[10]"));
   rplayer.getNode("instrumentation/woolthread/alpha-woolthread-deg", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[11]"));
   rplayer.getNode("instrumentation/woolthread/beta-woolthread-deg", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[12]"));
   rplayer.getNode("sim/model/MRX13/LaunchPosition", 1).
     alias(rplayer.getNode("sim/multiplay/generic/float[13]"));

   rplayer.getNode("sim/hitches/winch/force_name_jsbsim", 1).
     alias(rplayer.getNode("sim/multiplay/generic/string[0]"));

   rplayer.getNode("sim/current-view/view-number", 1).setIntValue(1); # set view=1 to prevent deselected helmet
   rplayer.getNode("instrumentation/woolthread/severity1", 1).setValue(0); # severity1 is not transmitted
   rplayer.getNode("instrumentation/woolthread/severity2", 1).setValue(0); # severity2 is not transmitted
   rplayer.getNode("gear/gear[1]/position-norm", 1).setValue(0); # property is not transmitted
   rplayer.getNode("sim/model/SmokeTrail/help/off", 1).setIntValue(0); # property is not transmitted
   # print("MRX13 loaded")

  </load>

  <unload>
   livery_update.stop();

   # unalias
   rplayer.getNode("sim/model/MRX13/on-ground", 1).unalias();
   rplayer.getNode("sim/model/MRX13/with-wheels_mp", 1).unalias();
   rplayer.getNode("sim/model/MRX13/with-woolthread_mp", 1).unalias();
   rplayer.getNode("sim/model/MRX13/with-TwoStageRelease_mp", 1).unalias();
   rplayer.getNode("sim/model/MRX13/RotateAboutHangpoint", 1).unalias();
   rplayer.getNode("sim/model/MRX13/RotateAboutPilot", 1).unalias();
   rplayer.getNode("sim/model/MRX13/wing-failure", 1).unalias();
   rplayer.getNode("sim/model/SmokeTrail/Keel/Generator", 1).unalias();
   rplayer.getNode("sim/model/SmokeTrail/ControlBarLeft/Generator", 1).unalias();
   rplayer.getNode("sim/model/SmokeTrail/ControlBarRight/Generator", 1).unalias();

   # rplayer.getNode("sim/current-view/view-number", 1).unalias();

   rplayer.getNode("sim/model/MRX13/animation/running_leg_left", 1).unalias();
   rplayer.getNode("sim/model/MRX13/animation/running_leg_right", 1).unalias();
   rplayer.getNode("sim/model/MRX13/animation/running_leg", 1).unalias();
   rplayer.getNode("sim/model/MRX13/animation/running_leg_sign", 1).unalias();
   rplayer.getNode("controls/flight/pilot-attitude-deg", 1).unalias();
   rplayer.getNode("sim/model/Parachutes/drogue_chute-pos-norm", 1).unalias();
   rplayer.getNode("sim/model/Parachutes/parachute-pos-norm", 1).unalias();
   rplayer.getNode("fdm/jsbsim/gear/unit[10]/wheel-speed-fps", 1).unalias();
   rplayer.getNode("fdm/jsbsim/gear/unit[11]/wheel-speed-fps", 1).unalias();
   rplayer.getNode("sim/model/aero/alpha-deg", 1).unalias();
   rplayer.getNode("sim/model/aero/beta-deg", 1).unalias();
   rplayer.getNode("instrumentation/woolthread/alpha-woolthread-deg", 1).unalias();
   rplayer.getNode("instrumentation/woolthread/beta-woolthread-deg", 1).unalias();
   rplayer.getNode("sim/model/MRX13/LaunchPosition", 1).unalias();
   rplayer.getNode("sim/hitches/winch/force_name_jsbsim", 1).unalias();
   # print("MRX13 unloaded");

  </unload>

 </nasal>

 <path>MRX13.ac</path>

